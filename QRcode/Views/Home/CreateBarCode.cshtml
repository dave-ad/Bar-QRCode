@model CodeGen.Models.GenerateCodeModel

@{
    ViewData["Title"] = "CreateBarCode";
}

<h1>Create Bar Code</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBarCode">
            <div class="form-group">
                <label asp-for="Input" class="control-label"></label>
                <input asp-for="Input" class="form-control" />
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate Bar Code" class="btn btn-primary" />
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(ViewBag.BarCodeUrl))
                {
                    <img src="~/@ViewBag.BarCodeUrl" alt="Bar Code">
                }
                else
                {
                    <p>No Bar Code available.</p>
                }
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}