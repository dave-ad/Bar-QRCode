@model QRcode.Models.GenerateQRCodeModel

@{
    ViewData["Title"] = "CreateQRCode";
}

<h1>Create QR Code</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQRCode">
            <div class="form-group">
                <label asp-for="QRInput" class="control-label"></label>
                <input asp-for="QRInput" class="form-control"/>
                <span asp-validation-for="QRInput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate QR Code" class="btn btn-primary"/>
            </div>
            <div class="form-group">
                <img src="@ViewBag.QRCodeUrl" class="img-thumbnail" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}